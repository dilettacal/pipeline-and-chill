# ChillFlow Platform - Environment Variables
# Copy to .env and customize for your local setup

# Database Configuration
POSTGRES_DB=chillflow
POSTGRES_USER=dev
POSTGRES_PASSWORD=dev
DATABASE_URL=postgresql://dev:dev@localhost:5432/chillflow

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_AUTO_CREATE_TOPICS_ENABLE=true

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=DEBUG
HASH_SALT=chillflow-dev-salt-2025

# Monitoring Configuration (optional)
GRAFANA_ADMIN_PASSWORD=admin
PROMETHEUS_RETENTION=15d

# Port Configuration (if you want to change default ports)
# POSTGRES_PORT=5432
# REDIS_PORT=6379
# KAFKA_PORT=9092
# GRAFANA_PORT=3000
# PROMETHEUS_PORT=9090
